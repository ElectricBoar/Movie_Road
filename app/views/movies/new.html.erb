<h1>New Movie</h1>
<div class="row">
  <div class="span8 offset4">
    <%= form_for(@movie) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :imdb %>
    <%= f.text_field :imdb %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :actors %>
    <%= f.text_field :actors %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :duration %>
    <%= f.text_field :duration %>

    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :content %>
    <%= f.text_field :content, size: '24x4' %>


    <%= f.submit"Create ", class: "btn btn-large btn-primary"  %> 
<% end %>
  </div>
</div>
