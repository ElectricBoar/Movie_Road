<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="span3">
        </br>
        <%= image_tag @movie.image.url %>
      </div>
      <div class="span6">
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @movie.name %></td>
              </tr>
              <tr>
                <td><strong>Imdb:</strong></td>
                <td><%= @movie.imdb %></td>
              </tr>
                            
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Actors:</strong></td>
                <td><%= @movie.actors %></td>
              </tr>
              <tr>
                <td><strong>Genre:</strong></td>
                <td><%= @movie.genre %></td>
              </tr>
              <tr>
                <td><strong>Duration:</strong></td>
                <td><%= @movie.duration %></td>
              </tr>
              <tr>
                <td><strong>Date:</strong></td>
                <td><%= @movie.date %></td>
              </tr>
              <tr>
                <td><strong>Actors:</strong></td>
                <td><%= @movie.actors %></td>
              </tr>

            </tbody>
          </table>
        </div>
        </div>
        <div class="span3">
                  </br>
                  </br>

                </br>
              <% if signed_in? %>
                <strong>Your rating:</strong>
                <div id="user_star">
                    <script>
                          $('#user_star').raty({
                          score: <%= @rating.score %>,
                          path: '/assets',
                          click: function(score, evt) {
                          $.ajax({
                          url: '/ratings/' + <%= @rating.id %>,
                          type: 'PATCH',
                          data: { score: score }
                          });
                        },
                      });
                      </script>
                    </div>
                    <% end %>
                    </br>
                <strong>Averate rating:</strong>
                <div id="star"></div>
                  </br>
                  </br>
          <% if signed_in? %>
          <%- unless current_user.favorites.exists?(favorited_id: @movie.id) -%>
          <%= link_to 'Add to favorites', favorites_path(movie_id: @movie), method: :post, class: "btn btn-success btn-large" %>
          <%- else -%>
          <%= link_to 'Remove from favorites', favorite_path(@movie), method: :delete, class: "btn btn-danger btn-large" %>
          <%- end -%>
          <%- end -%>
        </div>
      </div>
       <strong>Content:</strong>
       <%= @movie.content %>
      <% if signed_in? %>
      <h2>Comments</h2>
       <div id="comments">
               <%= render :partial => @movie.comments %>
       </div>


      <%= form_for [@movie, Comment.new] do |f| %>
                 
              <p>

                      <%= f.text_area :body %>
              </p>
              <p><%= f.submit "Add comment", class: "btn btn-primary btn-large" %></p>
      <% end %>
      <% end %>
      <%= link_to 'Edit', edit_movie_path(@movie) %> |
      <%= link_to 'Back', movies_path %>
    </div>
  </div>

<script>
  $('#star').raty({
    readOnly: true,
    score: <%= @movie.average_rating %>,
    path: '/assets'
  });


</script>