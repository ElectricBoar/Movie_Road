<table border=1>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Imdb</th>
      <th>Name</th>
      <th>Director</th>
      <th>Actors</th>
      <th>Genre</th>
      <th>Duration</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_movies.each do |movie| %>
      <tr>
        <td><%= image_tag movie.image.url %></td>
        <td><%= movie.imdb %></td>
        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.date %></td>
        <td><%= link_to 'Show', movie %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>