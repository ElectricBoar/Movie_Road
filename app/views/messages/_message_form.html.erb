<div class='message'>
  <%= form_for @message do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :to %>
    <%= f.collection_select(:receive_id, User.all, :id, :name, :include_blank => "Please select") %>
    <%= f.label :content, 'Message' %>
    <%= f.text_area :content %>
    <%= f.submit 'Send', class: 'btn btn-large btn-primary' %>
  <% end %>
</div>
